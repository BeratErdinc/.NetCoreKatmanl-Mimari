@model EntityLayer.Concrete.WriterUser
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <p class="card-description">
                    Kullanıcı Bilgileri
                  </p>
                  <form class="forms-sample">
                    <div class="form-group">
                      <label for="exampleInputUsername1">Username</label>
                      <input type="text" class="form-control"  value="@Model.Name" name="@Model.Name" placeholder="Username">
                    </div>
                     <div class="form-group">
                      <label for="exampleInputPassword1">Surname</label>
                      <input type="text" class="form-control"value="@Model.Surname" name="@Model.Surname">
                    </div>
              
                    <div class="form-group">
                      <label for="exampleInputEmail1">Email address</label>
                      <input type="email" class="form-control" value="@Model.Email" name="@Model.Email" placeholder="Email">
                    </div>
                   
              
                  </form>
                </div>
              </div>
            </div>


