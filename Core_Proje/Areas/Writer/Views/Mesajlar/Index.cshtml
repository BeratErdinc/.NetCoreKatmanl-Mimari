@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Basic Table</h4>
                 
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                           <th>Gönderen</th>
                          <th>İçerik</th>
                          <th>Tarih</th>
                          <th>Detay</th>
                          
                        </tr>
                      </thead>
                      <tbody>
                          @foreach (var item in Model)
                          {
                          

                        <tr>
                           <td>@item.Sender</td>
                          <td>@item.Content</td>
                          <td>@item.Date.ToShortDateString()</td>
                          <td> <a href="/Writer/Mesajlar/MesajDetay/@item.WriterMessageId" class="btn btn-success">Mesaj Detay</a></td>
                        </tr>
                          }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

